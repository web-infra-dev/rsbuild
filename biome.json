{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "defaultBranch": "main",
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**/packages/**",
      "**/examples/**",
      "**/e2e/**",
      "**/scripts/**",
      "**/website/**",
      "!**/node_modules",
      "!**/.nx",
      "!**/dist",
      "!**/dist-*",
      "!**/doc_build",
      "!**/compiled",
      "!**/*.vue",
      "!**/*.svelte",
      "!**/template-lit-*/src/my-element.*",
      "!e2e/cases/browser-logs/skip-build-error/src",
      "!e2e/cases/config/stats-options/src/App.scss",
      "!e2e/**/*.html",
      "!packages/core/types.d.ts"
    ],
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": false
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useUniqueElementIds": "off",
        "useHookAtTopLevel": "off"
      },
      "complexity": {
        "noImportantStyles": "off"
      },
      "a11y": {
        "useHtmlLang": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["camelCase", "PascalCase", "export"]
          }
        }
      },
      "suspicious": {
        "noTsIgnore": "off",
        "noExplicitAny": "off",
        "noConfusingVoidType": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["e2e/**/ðŸ¦€.js", "e2e/**/charset-zh-filename/**"],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          }
        }
      }
    }
  ]
}
