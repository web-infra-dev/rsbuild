{
  "extends": "@rsbuild/tsconfig/base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./",
    "outDir": "./dist",
    "module": "ES2022",
    "target": "ES2017",
    "paths": {
      "@/*": ["./src/*"],
      "@scripts/*": ["../../scripts/*"]
    }
  },
  "include": ["src", "*.test.ts"]
}
