{
  "extends": "@rsbuild/tsconfig/base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@scripts/*": ["./scripts/*"]
    }
  },
  "include": [
    "src",
    "scripts",
    "cases",
    "playwright.config.ts",
    "cases/**/*.test.ts",
    "uni-builder/**/*.test.ts"
  ],
  "exclude": ["**/node_modules", "**/.*/"]
}
