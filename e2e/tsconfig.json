{
  "extends": "@rsbuild/config/tsconfig",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "scripts",
    "cases",
    "playwright.config.ts",
    "cases/**/*.test.ts"
  ],
  "references": [
    {
      "path": "../packages/core"
    }
  ],
  "exclude": ["**/node_modules", "**/.*/", "**/test-temp-*"]
}
