{
  "extends": "@rsbuild/tsconfig/base",
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/node_modules"]
}
