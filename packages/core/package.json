{
  "name": "@rsbuild/core",
  "version": "1.5.0-beta.1",
  "description": "The Rspack-based build tool.",
  "homepage": "https://rsbuild.rs",
  "bugs": {
    "url": "https://github.com/web-infra-dev/rsbuild/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/web-infra-dev/rsbuild",
    "directory": "packages/core"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist-types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client/hmr": {
      "types": "./dist-types/client/hmr.d.ts",
      "default": "./dist/client/hmr.js"
    },
    "./client/overlay": {
      "types": "./dist-types/client/overlay.d.ts",
      "default": "./dist/client/overlay.js"
    },
    "./types": {
      "types": "./types.d.ts"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "types": "./dist-types/index.d.ts",
  "bin": {
    "rsbuild": "./bin/rsbuild.js"
  },
  "files": [
    "bin",
    "dist",
    "dist-types",
    "static",
    "compiled",
    "types.d.ts"
  ],
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "prebundle": "prebundle",
    "bump": "pnpx bumpp --no-tag"
  },
  "dependencies": {
    "@rspack/core": "1.5.0-beta.0",
    "@rspack/lite-tapable": "~1.0.1",
    "@swc/helpers": "^0.5.17",
    "core-js": "~3.45.0",
    "jiti": "^2.5.1"
  },
  "devDependencies": {
    "@rslib/core": "0.12.0",
    "@types/connect": "3.4.38",
    "@types/cors": "^2.8.19",
    "@types/node": "^22.17.1",
    "@types/on-finished": "2.3.5",
    "@types/webpack-bundle-analyzer": "4.7.0",
    "@types/ws": "^8.18.1",
    "browserslist-load-config": "1.0.1",
    "cac": "^6.7.14",
    "chokidar": "^4.0.3",
    "connect": "3.7.0",
    "cors": "^2.8.5",
    "css-loader": "7.1.2",
    "deepmerge": "^4.3.1",
    "dotenv-expand": "12.0.2",
    "html-rspack-plugin": "6.1.2",
    "http-proxy-middleware": "^2.0.9",
    "launch-editor-middleware": "^2.11.1",
    "mrmime": "^2.0.1",
    "on-finished": "2.4.1",
    "open": "^10.2.0",
    "picocolors": "^1.1.1",
    "postcss": "^8.5.6",
    "postcss-load-config": "6.0.1",
    "postcss-loader": "8.1.1",
    "prebundle": "1.4.1",
    "reduce-configs": "^1.1.1",
    "rsbuild-dev-middleware": "0.3.0",
    "rslog": "^1.2.11",
    "rspack-chain": "^1.4.0",
    "rspack-manifest-plugin": "5.0.3",
    "sirv": "^3.0.1",
    "style-loader": "3.3.4",
    "tinyglobby": "^0.2.14",
    "typescript": "^5.9.2",
    "webpack": "^5.101.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-merge": "6.0.1",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
