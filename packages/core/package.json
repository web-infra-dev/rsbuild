{
  "name": "@rsbuild/core",
  "version": "0.1.0",
  "description": "Unleash the power of Rspack with the out-of-the-box build tool.",
  "homepage": "https://rsbuild.dev",
  "bugs": {
    "url": "https://github.com/web-infra-dev/rsbuild/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/web-infra-dev/rsbuild",
    "directory": "packages/core"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "default": "./dist/server/index.js"
    },
    "./client/*": {
      "types": "./dist/client/*.d.ts",
      "default": "./dist/client/*.js"
    },
    "./cli": {
      "types": "./dist/cli/commands.d.ts",
      "default": "./dist/cli/commands.js"
    },
    "./plugins/*": {
      "types": "./dist/plugins/*.d.ts",
      "default": "./dist/plugins/*.js"
    },
    "./rspack-plugin-css": {
      "types": "./dist/rspack-provider/plugins/css.d.ts",
      "default": "./dist/rspack-provider/plugins/css.js"
    },
    "./rspack-provider": {
      "types": "./dist/rspack-provider/index.d.ts",
      "default": "./dist/rspack-provider/index.js"
    },
    "./types": {
      "types": "./types.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "rsbuild": "./bin/rsbuild.js"
  },
  "files": [
    "bin",
    "dist",
    "static",
    "compiled",
    "types.d.ts"
  ],
  "scripts": {
    "build": "modern build",
    "dev": "modern build --watch"
  },
  "dependencies": {
    "@rsbuild/shared": "workspace:*",
    "@rspack/core": "0.4.0",
    "core-js": "~3.32.2",
    "html-webpack-plugin": "npm:html-rspack-plugin@5.5.7",
    "postcss": "8.4.31",
    "semver": "^7.5.4",
    "ws": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^16",
    "@types/ws": "^8.2.0",
    "@types/semver": "^7.5.4",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  }
}
