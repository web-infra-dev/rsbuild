{
  "name": "@rsbuild/core",
  "description": "Unleash the power of Rspack with the out-of-the-box build tool.",
  "homepage": "https://rsbuild.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/web-infra-dev/rsbuild",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/web-infra-dev/rsbuild/issues"
  },
  "bin": {
    "rsbuild": "./bin/rsbuild.js"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "license": "MIT",
  "version": "0.0.7",
  "types": "./src/index.ts",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "default": "./dist/cli/index.js"
    },
    "./plugins/*": {
      "types": "./dist/plugins/*.d.ts",
      "default": "./dist/plugins/*.js"
    },
    "./rspack-plugin-css": {
      "types": "./dist/rspack-provider/plugins/css.d.ts",
      "default": "./dist/rspack-provider/plugins/css.js"
    },
    "./rspack-provider": {
      "types": "./dist/rspack-provider/index.d.ts",
      "default": "./dist/rspack-provider/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "cli": [
        "./dist/cli/index.d.ts"
      ],
      "plugins/*": [
        "./dist/plugins/*.d.ts"
      ],
      "rspack-plugin-css": [
        "./dist/rspack-provider/plugins/css.d.ts"
      ],
      "rspack-provider": [
        "./dist/rspack-provider/index.d.ts"
      ]
    }
  },
  "files": [
    "bin",
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "provenance": true,
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "dev": "modern build --watch",
    "build": "modern build"
  },
  "dependencies": {
    "@modern-js/utils": "^2.37.1",
    "@modern-js/server": "^2.37.1",
    "@modern-js/types": "^2.37.1",
    "@rspack/core": "0.3.8",
    "@rspack/dev-client": "0.3.8",
    "@rspack/plugin-html": "0.3.8",
    "@rspack/plugin-react-refresh": "0.3.8",
    "@rsbuild/shared": "workspace:*",
    "@svgr/webpack": "8.0.1",
    "commander": "^10.0.1",
    "jiti": "^1.20.0",
    "postcss": "8.4.31",
    "rspack-manifest-plugin": "5.0.0-alpha0",
    "webpack": "^5.88.1"
  },
  "devDependencies": {
    "@types/node": "^16",
    "typescript": "^5"
  }
}
