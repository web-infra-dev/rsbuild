{
  "name": "@rsbuild/core",
  "version": "0.0.20",
  "description": "Unleash the power of Rspack with the out-of-the-box build tool.",
  "homepage": "https://rsbuild.dev",
  "bugs": {
    "url": "https://github.com/web-infra-dev/rsbuild/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/web-infra-dev/rsbuild",
    "directory": "packages/core"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "default": "./dist/server/index.js"
    },
    "./hmr-client": {
      "types": "./dist/server/dev-middleware/hmr-client/index.d.ts",
      "default": "./dist/server/dev-middleware/hmr-client/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "default": "./dist/cli/index.js"
    },
    "./plugins/*": {
      "types": "./dist/plugins/*.d.ts",
      "default": "./dist/plugins/*.js"
    },
    "./rspack-plugin-css": {
      "types": "./dist/rspack-provider/plugins/css.d.ts",
      "default": "./dist/rspack-provider/plugins/css.js"
    },
    "./rspack-provider": {
      "types": "./dist/rspack-provider/index.d.ts",
      "default": "./dist/rspack-provider/index.js"
    },
    "./types": {
      "types": "./types.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "bin": {
    "rsbuild": "./bin/rsbuild.js"
  },
  "files": [
    "bin",
    "dist",
    "static",
    "types.d.ts"
  ],
  "scripts": {
    "build": "modern build",
    "dev": "modern build --watch"
  },
  "dependencies": {
    "@rsbuild/shared": "workspace:*",
    "@rspack/core": "0.3.11",
    "connect": "3.7.0",
    "connect-history-api-fallback": "^2.0.0",
    "commander": "^10.0.1",
    "core-js": "~3.32.2",
    "gzip-size": "^6.0.0",
    "html-webpack-plugin": "npm:html-rspack-plugin@5.5.5",
    "http-compression": "1.0.6",
    "http-proxy-middleware": "^2.0.1",
    "jiti": "^1.20.0",
    "open": "^8.4.0",
    "postcss": "8.4.31",
    "rslog": "^1.1.0",
    "semver": "^7.5.4",
    "sirv": "^2.0.3",
    "ws": "^8.2.0"
  },
  "devDependencies": {
    "@types/connect": "3.4.35",
    "@types/connect-history-api-fallback": "^1.3.5",
    "@types/node": "^16",
    "@types/ws": "^8.2.0",
    "@types/semver": "^7.5.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/",
    "types": "./dist/index.d.ts"
  }
}
