{
  "name": "rsbuild-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "scripts/*"
  ],
  "scripts": {
    "build": "cross-env NX_DAEMON=false nx run-many -t build --exclude @examples/* @e2e/* rsbuild-* --parallel=10 --no-tui",
    "check-dependency-version": "pnpx check-dependency-version-consistency . --ignore-dep loader-utils",
    "check-spell": "pnpx cspell && heading-case",
    "doc": "cd website && pnpm dev",
    "e2e": "cd ./e2e && pnpm e2e",
    "format": "prettier --experimental-cli --write . && heading-case --write",
    "lint": "biome check && pnpm lint:type",
    "lint:type": "rslint",
    "prebundle": "nx run-many -t prebundle",
    "prepare": "simple-git-hooks && pnpm build",
    "sort-package-json": "pnpx sort-package-json \"./package.json\" \"packages/*/package.json\"",
    "test": "rstest",
    "test:watch": "rstest watch"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec nano-staged"
  },
  "nano-staged": {
    "*.{md,mdx,json,css,less,scss}": "prettier --experimental-cli --write",
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "biome check --write --no-errors-on-unmatched",
      "prettier --experimental-cli --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@rsbuild/config": "workspace:*",
    "@rslint/core": "0.2.1",
    "@rstest/adapter-rslib": "^0.2.0",
    "@rstest/core": "^0.8.5",
    "@scripts/test-helper": "workspace:*",
    "@types/node": "^24.10.13",
    "cross-env": "^10.1.0",
    "cspell-ban-words": "^0.0.4",
    "heading-case": "^1.0.7",
    "nano-staged": "^0.9.0",
    "nx": "^22.5.2",
    "prettier": "^3.8.1",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.30.0",
  "engines": {
    "node": ">=22.18.0",
    "pnpm": ">=10.30.0"
  },
  "pnpm": {
    "overrides": {
      "@rslib/core": "https://pkg.pr.new/@rslib/core@802a7fe",
      "@rspack/core": "2.0.0-beta.4"
    }
  }
}
