{
  "private": true,
  "name": "rsbuild-monorepo",
  "scripts": {
    "ut": "vitest run",
    "ut:watch": "vitest",
    "e2e": "cd ./e2e && pnpm test",
    "new": "modern new",
    "test": "pnpm run ut",
    "bump": "modern bump",
    "lint": "oxlint .",
    "build": "pnpm --filter \"./packages/**\" run build",
    "change": "modern change",
    "release": "modern release",
    "prepare": "pnpm run build && husky install",
    "gen-release-note": "modern gen-release-note",
    "check-changeset": "cd ./scripts/check-changeset && pnpm start",
    "update-modern": "cd ./scripts/update-packages && pnpm start:modern",
    "update-rspress": "cd ./scripts/update-packages && pnpm start:rspress"
  },
  "engines": {
    "node": ">=16.18.1",
    "pnpm": ">=8.7.0"
  },
  "packageManager": "pnpm@8.9.0",
  "nano-staged": {
    "*.{md,json,css,less,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "prettier --write",
      "oxlint"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@modern-js/module-tools": "^2.37.1",
    "@modern-js/monorepo-tools": "^2.37.1",
    "@rsbuild/tsconfig": "workspace:*",
    "@rsbuild/test-helper": "workspace:*",
    "vite-tsconfig-paths": "4.2.1",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "oxlint": "^0.0.13",
    "prettier": "^3.0.3",
    "vitest": "1.0.0-beta.1"
  },
  "pnpm": {
    "allowedDeprecatedVersions": {
      "consolidate": "0.15.1"
    }
  }
}
