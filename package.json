{
  "private": true,
  "name": "rsbuild-monorepo",
  "scripts": {
    "new": "modern new",
    "bump": "modern bump",
    "lint": "oxlint .",
    "test:ut": "echo 'foo'",
    "test:e2e": "echo 'e2e'",
    "build": "turbo run build --filter {packages/**} --cache-dir=.turbo --no-daemon",
    "change": "modern change",
    "release": "modern release",
    "prepare": "pnpm run build && husky install",
    "gen-release-note": "modern gen-release-note"
  },
  "engines": {
    "node": ">=16.18.1"
  },
  "packageManager": "pnpm@8.8.0",
  "nano-staged": {
    "*.{md,json,css,less,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "prettier --write",
      "oxlint"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@modern-js/module-tools": "^2.35.1",
    "@modern-js/monorepo-tools": "2.35.1",
    "@modern-js/tsconfig": "^2.35.1",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "oxlint": "^0.0.13",
    "prettier": "^3.0.3",
    "turbo": "^1.10.12",
    "vitest": "0.33.0"
  }
}
