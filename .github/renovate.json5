{
	$schema: "https://docs.renovatebot.com/renovate-schema.json",
	extends: ["config:recommended", "schedule:weekly"],
	ignorePaths: ["**/tests/**", "**/node_modules/**"],
	packageRules: [
		{
			semanticCommitType: "chore",
			rangeStrategy: "bump",
			matchPackageNames: ["*"],
		},
		{
			groupName: "babel",
			groupSlug: "babel",
			matchPackageNames: ["/babel/"],
		},
		{
			groupName: "rspack",
			groupSlug: "rspack",
			matchPackageNames: ["/rspack/"],
		},
		{
			groupName: "rspress",
			groupSlug: "rspress",
			matchPackageNames: ["/rspress/"],
		},
		{
			groupName: "rslib",
			groupSlug: "rslib",
			matchPackageNames: ["/rslib/"],
		},
		{
			groupName: "modern-js",
			groupSlug: "modern-js",
			matchPackageNames: ["/modern-js/"],
		},
		{
			groupName: "eslint",
			groupSlug: "eslint",
			matchPackageNames: ["/eslint/"],
		},
		{
			groupName: "types",
			groupSlug: "types",
			matchPackageNames: ["/^@types//"],
		},
		{
			groupName: "all patch dependencies",
			groupSlug: "all-patch",
			matchUpdateTypes: ["patch"],
			matchPackageNames: ["*"],
		},
		{
			matchDepTypes: ["peerDependencies"],
			enabled: false,
		},
	],
	ignoreDeps: [
		"pnpm",
		"loader-utils",
		"open",
		"strip-ansi",
		"ansi-escapes",
		"cli-truncate",
		"patch-console",
		"@types/node",
		"node",
		"babel-plugin-react-compiler",
		"copy-webpack-plugin",
		"chokidar",
		"style-loader",
		"http-proxy-middleware",
	],
}
