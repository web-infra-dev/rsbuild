{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'schedule:weekly',
    'helpers:pinGitHubActionDigests',
  ],
  ignorePaths: ['**/tests/**', '**/node_modules/**'],
  packageRules: [
    // Use chore as semantic commit type for commit messages
    {
      semanticCommitType: 'chore',
      // always bump package.json
      rangeStrategy: 'bump',
      matchPackageNames: ['*'],
    },
    {
      groupName: 'Babel',
      groupSlug: 'babel',
      matchPackageNames: ['/babel/'],
    },
    {
      groupName: 'Rspack',
      groupSlug: 'rspack',
      matchPackageNames: ['/rspack/'],
    },
    {
      groupName: 'Rspress',
      groupSlug: 'rspress',
      matchPackageNames: ['/rspress/'],
    },
    {
      groupName: 'Rslib',
      groupSlug: 'rslib',
      matchPackageNames: ['/rslib/'],
    },
    {
      groupName: 'Sass',
      groupSlug: 'sass',
      matchPackageNames: ['/sass/'],
    },
    {
      groupName: 'ESLint',
      groupSlug: 'eslint',
      matchPackageNames: ['/eslint/'],
    },
    {
      groupName: 'Module Federation',
      groupSlug: 'module-federation',
      matchPackageNames: ['/module-federation/'],
    },
    {
      groupName: 'types',
      groupSlug: 'types',
      matchPackageNames: ['/^@types//'],
    },
    {
      groupName: 'all patch dependencies',
      groupSlug: 'all-patch',
      matchUpdateTypes: ['patch'],
      matchPackageNames: ['*'],
    },
    // manually update peer dependencies
    {
      matchDepTypes: ['peerDependencies'],
      enabled: false,
    },
    // keep React 18 and Vue 2 template
    {
      matchPaths: [
        '**/template-react18-js/**',
        '**/template-react18-ts/**',
        '**/template-vue2-js/**',
        '**/template-vue2-ts/**',
      ],
      matchPackageNames: [
        'vue',
        'react',
        'react-dom',
        '@types/react',
        '@types/react-dom',
      ],
      enabled: false,
    },
    {
      matchPackageNames: ['pnpm'],
      matchUpdateTypes: ['patch'],
      enabled: false,
    },
  ],
  ignoreDeps: [
    // some loaders still depend on loader-utils v2
    'loader-utils',
    // pure ESM packages can not be used now
    'open',
    'ansi-escapes',
    'cli-truncate',
    'patch-console',
    'node',
    // require Node 18
    'copy-webpack-plugin',
    // major version contains breaking changes
    'style-loader',
    'http-proxy-middleware',
  ],
}
